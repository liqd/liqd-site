{
  "devDependencies": {
    "eslint": "8.22.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "4.1.0",
    "stylelint": "14.11.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@babel/core": "7.18.13",
    "@babel/plugin-transform-modules-commonjs": "7.18.6",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-react": "7.18.6",
    "@babel/runtime": "7.18.9",
    "@liqd/liqd-fonts": "git+ssh://github.com/liqd/liqd-fonts.git",
    "autoprefixer": "10.4.8",
    "babel-loader": "8.2.5",
    "bootstrap": "5.2.0",
    "css-loader": "6.7.1",
    "glslify-loader": "2.0.0",
    "jquery": "3.6.0",
    "liquid-logo": "git+https://github.com/liqd/liquid-logo.git",
    "mini-css-extract-plugin": "2.6.1",
    "postcss": "8.4.16",
    "postcss-loader": "7.0.1",
    "raw-loader": "4.0.2",
    "sass": "1.54.5",
    "sass-loader": "13.0.2",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-declaration-strict-value": "1.9.0",
    "terser-webpack-plugin": "5.3.5",
    "webpack": "5.74.0",
    "webpack-merge": "5.8.0"
  },
  "scripts": {
    "lint": "eslint apps/core -c package.json && stylelint 'apps/core/**/*.scss'",
    "lint-fix": "eslint --fix apps/core -c package.json",
    "build:prod": "webpack --config webpack.prod.js --mode production",
    "build": "webpack --config webpack.dev.js --mode development",
    "watch": "webpack --config webpack.dev.js --watch --mode development",
    "precommit": "make lint"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "indent": [
        "error",
        2
      ]
    },
    "env": {
      "browser": true,
      "node": true
    }
  }
}
